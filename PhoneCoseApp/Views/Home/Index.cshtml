@using PhoneCoseApp.Controllers
@model PhoneCoseApp.ViewModels.Home.IndexViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Here will be homepage</h1>
    <h3>Todays discount on: @Model.Discount</h3>
    <div>
        @foreach (var phone in Model.Phones)
        {
            <div>
                <p>
                    Phones Id: @phone.Id @Html.ActionLink("View",
                                    nameof(HomeController.Details),
                                    new { Id = phone.Id });
                </p>
                
                <p>Phones name: @phone.Name</p>
            </div>

        }
        
    </div>
</body>
</html>
